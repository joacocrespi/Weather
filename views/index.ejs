<%- include("partials/header.ejs") %>
        <h2 class="text-secondary">whenever and wherever you are!</h2>
				<p class="col-lg-8 mx-auto fs-5 text-muted">
					This webpage is developed to learn public API's usage. Check your
					weather by clicking the button.
				</p>
	    <form id="weatherForm" method="POST" action="/submit" class="mt-5 px-5">
        <div class="mb-3 col-auto">        
          <input type="text" name="cityName" class="form-control   text-center" placeholder="Type your city name. Ex: Valencia, Valencia, SP">
        </div>
        <div class="mb-3 col-auto">        
          <input type="text" name="latitude" class="form-control   text-center" placeholder="Type your Latitude.">
        </div>
        <div class="mb-3 col-auto">        
          <input type="text" name="longitude" class="form-control   text-center" placeholder="Type your Longitude.">
        </div>
        <div class="mb-3 col-auto">   
          <select class="form-select text-center text-secondary" name="unit" >
            <option selected>Choose a measurement unit.</option>
            <option value="metric">metric</option>
            <option value="imperial">imperial</option>
            <option value="standard">standard</option>
          </select>
        </div>
        <div class="mb-3 col-auto">        
          <input type="text" name="zipCode" class="form-control   text-center" placeholder="Type your city Zip Code.">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-personal">Search</button>
        </div>
	    </form>
    </div>
  </div>

<%-include("partials/footer.ejs")%>